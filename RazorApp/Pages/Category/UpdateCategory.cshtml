@page
@model RazorApp.Pages.Category.UpdateCategoryModel
@{
    ViewData["Title"] = "Update Category";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>@ViewData["Title"]</h1>

        <form method="post">
            <input type="hidden" asp-for="Category.Id" />

            <div class="form-group">
                <label asp-for="Category.CategoryName">Category Name:</label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>

            <!-- Добавьте другие поля DTO здесь, если необходимо -->

            <button type="submit" class="btn btn-primary">Update Category</button>
            <a asp-page="/Category/GetCategories" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
